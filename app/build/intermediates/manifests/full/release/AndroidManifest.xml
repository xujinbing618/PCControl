<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pccontrol"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="com.example.pccontrol.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name="com.example.pccontrol.LoginAty"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.pccontrol.MainActivity" />
        <activity android:name="com.example.pccontrol.ControlPPTAty" />
        <activity android:name="com.example.pccontrol.PPTOpenremindAty" />
        <activity
            android:name="com.example.pccontrol.MouseControlAty"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.example.pccontrol.AdbDebugAty" />
        <activity
            android:name="com.example.pccontrol.KeyBoardInputAty"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity android:name="com.example.pccontrol.RemoteShutdownAty" />
    </application>

</manifest>