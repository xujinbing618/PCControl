<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/window_background"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="遥控关机"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
            android:id="@+id/adb_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="遥控关闭计算机"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/shutdown_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shutdown_btn_style_normal"
                android:textSize="12sp"
                />

        </RelativeLayout>




    </LinearLayout>


</LinearLayout><!-- From: file:/home/zjianhao/AndroidStudioProjects/PCControl/app/src/main/res/layout/shutdown_main.xml -->