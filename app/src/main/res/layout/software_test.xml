<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/window_background"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/control_key2"
            />
    </LinearLayout>

    <EditText android:id="@+id/view_ed"
        android:visibility="visible"
        android:layout_width="1.0dip"
        android:layout_height="1.0dip"
        android:layout_marginTop="-100.0dip"
        android:layout_alignParentTop="true" />

<RelativeLayout
    android:layout_centerInParent="true"
    android:layout_width="160dp"
    android:layout_height="160dp">


     <Button
         android:layout_width="100dp"
         android:layout_height="40dp"
         android:layout_centerHorizontal="true"
         android:background="@drawable/pc_up"
         android:layout_marginTop="10dp"

         />
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pc_enter"

        />
    <Button
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:background="@drawable/pc_left"
        android:layout_marginLeft="10dp"

        />

    <Button
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pc_right"
        android:layout_marginRight="10dp"

        />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pc_down"
        android:layout_marginBottom="10dp"

        />



</RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >

        <Button
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_touch"
            android:text="Esc"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_touch"
            android:text="delete"
            android:layout_marginLeft="1dp"
            />
    </LinearLayout>

</RelativeLayout>